# TTrack v3.4.0 - Cloud Sync Configuration
# Copy this file to .env and fill in your actual values

# === SUPABASE CLOUD DATABASE ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
DATABASE_TIMEOUT=30
DATABASE_RETRY_ATTEMPTS=3

# === SYNC SERVICE CONFIGURATION ===
# Enable/disable cloud sync (true/false)
CLOUD_SYNC_ENABLED=true

# Local fallback directory for offline data
LOCAL_FALLBACK_DIR=data/local

# Auto-retry cloud connection interval (minutes)
SYNC_RETRY_INTERVAL=5

# Maximum local storage size (MB) before cleanup warning
MAX_LOCAL_STORAGE_MB=100

# === SECURITY & ENCRYPTION ===
# Encryption key for sensitive local data (generate with: python -c "import secrets; print(secrets.token_hex(32))")
LOCAL_ENCRYPTION_KEY=your_32_byte_hex_key_here

# Enable local data encryption (true/false)
ENCRYPT_LOCAL_DATA=false

# === APPLICATION SETTINGS ===
# Application environment (development/production)
APP_ENVIRONMENT=development

# Enable debug logging (true/false)
DEBUG_LOGGING=true

# Auto-save interval (minutes)
AUTO_SAVE_INTERVAL=10

# === BACKUP CONFIGURATION ===
# Enable automatic backups (true/false)
AUTO_BACKUP_ENABLED=true

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Backup directory
BACKUP_DIR=data/backups